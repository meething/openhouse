<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Openhouse</title>
    <script>
      const ROOM_ID = "<%= room.id %>";
      const PEERJS_HOST = "<%= peerjs.host %>";
      const PEERJS_PORT = "<%= peerjs.port %>";
    </script>
    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js" defer></script>
    <script src="/socket.io/socket.io.js" defer></script>
    <script src="/js/room.js" defer></script>
    <link href="/css/style.css" rel="stylesheet">
    <link href= "/css/room.css" rel="stylesheet" type="text/css" />
  </head>
  <body>
    <div class="flex flex-col max-w-2xl min-h-screen box-border px-10 py-5 my-0 mx-auto">
      <% if (room.title) { %>
        <h1 class="text-5xl"><%= room.title %></h1>
      <% } %>
      <div id="peer-grid" class="grid grid-flow-row grid-cols-4 gap-10 mb-auto"></div>
      <div class="flex flex-row bottom-0 w-full mt-auto">
        <button id="leave-button" onClick="leaveRoom(event)" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-6 mr-auto rounded-full">Leave room</button>
        <button id="mute-button" onClick="toggleMute(event)" class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-6 ml-auto rounded-full">Mute</button>
      </div>
    </div>
  </body>
</html>
