<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Openhouse</title>
    <script src="/js/rooms.js" defer></script>
    <link href="/css/style.css" rel="stylesheet">
  </head>
  <body>
    <div class="max-w-2xl min-h-screen box-border px-10 py-5 mx-auto my-0">
      <h1 class="text-5xl my-10">Openhouse</h1>
            <button onClick="startRoom()" class="bg-green-500 hover:bg-green-600 text-white font-bold py-4 px-6 mt-4 mb-12 w-full rounded-full">Start room</button>
      <div>
        <% for (var i = 0; i < Object.values(rooms).length; i++) { %>
            <button onClick="joinRoom(event)" class="w-full px-6 py-4 mb-2 bg-gray-200 hover:bg-gray-300 rounded-md font-medium" name="<%= Object.values(rooms)[i].id %>">
              <%= Object.values(rooms)[i].title %> (<%= Object.values(rooms)[i].peers.length %>)
            </button>
        <% } %>
      </div>
    </div>
  </body>
</html>
